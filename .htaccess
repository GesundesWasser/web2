<IfModule mod_rewrite.c>
  RewriteEngine On

  # Remove .php extension only if the corresponding .php file exists
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}\.php -f
  RewriteRule ^(.*)$ $1.php [L]

  # Remove .html extension only if the corresponding .html file exists
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}\.html -f
  RewriteRule ^(.*)$ $1.html [L]

  # Redirect /site to the root
  RewriteRule ^site(/.*)?$ / [L,R=301]
</IfModule>
